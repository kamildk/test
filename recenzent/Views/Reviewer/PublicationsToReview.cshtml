@model IEnumerable<recenzent.Data.Model.Publication>

@{
    ViewBag.Title = "Lista publikacji do zrecenzowania";
}
<input type="button" value="Powrót" style="border-spacing:100px 100px; float:right; right:5%"
    onclick="location.href='@Url.Action("Index", "Reviewer" )'" />
<h2>Lista publikacji w recenzji</h2>

<div class="list-group pre-scrollable">
    @foreach (var item in Model)
    {
        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.ActionLink(item.Title, "PublicationDetails", "Reviewer", new { id = item.PublicationId }, null)</h4>
        </div>
    }
</div>